<UserControl x:Class="wakaru.Views.OnlinePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wakaru.Views"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="227" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="10">
            <TextBlock Margin="0 0 0 10">客户端名称</TextBlock>
            <TextBlock Margin="0 0 0 10">订阅日程表</TextBlock>
            <TextBlock Margin="0 0 0 10">上课铃声</TextBlock>
            <TextBlock>下课铃声</TextBlock>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.Column="1" Margin="10">
            <TextBlock Name="TextClientName" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="TextSubscribeSchedule" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="TextBeginRingtone" Margin="0 0 0 10"></TextBlock>
            <TextBlock Name="TextOverRingtone"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
